{{% load misc_tags %}
    "regions":[
        {% for object in region_list %}{
            "slug":"{{ object.name|slugify|escapejs }}",
            "name":"{{ object.name|escapejs }}"
        }{% if not forloop.last %},{% endif %}
        {% endfor %}
    ],
    "neighborhoods":[
        {% for object in hood_list %}{
            "slug":"{{ object.name|slugify|escapejs }}",
            "name":"{{ object.name|escapejs }}",
            "centroid": {{ object.simple_shape.centroid.json|safe }}
        }{% if not forloop.last %},{% endif %}
        {% endfor %}
    ]
}
